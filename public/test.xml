<?xml version="1.0" encoding="UTF-8"?>
<root>
    <default>
        <route>*</route>
        <defaults module="default" controller="index" action="index" />
    </default>

    <pages>
        <route>pages/:pageNumber</route>
        <defaults module="default" controller="index" action="index" />
        <reqs pageNumber="\d+" />
    </pages>
</root>